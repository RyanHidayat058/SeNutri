<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".assessment.AssessmentFourthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamu"
                    android:textSize="@dimen/text_large"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/blue_primary"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/blue_primary"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/blue_primary"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/blue_primary"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@color/gray_primary"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beritahu kami sedikit tentang riwayat penyakit anda."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="53dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apakah kamu punya riwayat penyakit?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tumor/Kanker"
                            android:textSize="@dimen/text_medium"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:paddingStart="20dp"/>

                        <CheckBox
                            android:id="@+id/cbTumor"
                            android:button="@null"
                            android:drawableRight="@drawable/checkbox"
                            android:layout_width="match_parent"
                            android:paddingEnd="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diabetes"
                            android:textSize="@dimen/text_medium"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:paddingStart="20dp"/>

                        <CheckBox
                            android:id="@+id/cbDiabetes"
                            android:button="@null"
                            android:drawableRight="@drawable/checkbox"
                            android:layout_width="match_parent"
                            android:paddingEnd="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hipertensi"
                            android:textSize="@dimen/text_medium"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:paddingStart="20dp"/>

                        <CheckBox
                            android:id="@+id/cbHipertensi"
                            android:button="@null"
                            android:drawableRight="@drawable/checkbox"
                            android:layout_width="match_parent"
                            android:paddingEnd="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kolesterol"
                            android:textSize="@dimen/text_medium"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:paddingStart="20dp"/>

                        <CheckBox
                            android:id="@+id/cbKolesterol"
                            android:button="@null"
                            android:drawableRight="@drawable/checkbox"
                            android:layout_width="match_parent"
                            android:paddingEnd="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asam Urat"
                            android:textSize="@dimen/text_medium"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:paddingStart="20dp"/>

                        <CheckBox
                            android:id="@+id/cbAsamUrat"
                            android:button="@null"
                            android:drawableRight="@drawable/checkbox"
                            android:layout_width="match_parent"
                            android:paddingEnd="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_selector"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tidak Tahu"
                            android:textSize="@dimen/text_medium"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:paddingStart="20dp"/>

                        <CheckBox
                            android:id="@+id/cbTidakTahu"
                            android:button="@null"
                            android:drawableRight="@drawable/checkbox"
                            android:layout_width="match_parent"
                            android:paddingEnd="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_selector">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"
                            android:textSize="@dimen/text_medium"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:paddingStart="20dp"/>

                        <CheckBox
                            android:id="@+id/cbLainnya"
                            android:button="@null"
                            android:drawableRight="@drawable/checkbox"
                            android:layout_width="match_parent"
                            android:paddingEnd="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etLainnya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:hint="Masukkan penyakit lainnya"
                        android:background="@android:drawable/edit_text"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnBerikutnya"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Berikutnya"
            android:textSize="@dimen/text_medium"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>