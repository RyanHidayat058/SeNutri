<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/top_navbar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="13dp"
        android:paddingBottom="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Kembali" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Riwayat"
            android:textSize="@dimen/text_semilarge"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTanggalDetail"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Tanggal"
        android:textSize="@dimen/text_semilarge"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/cardAsupan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_height="wrap_content"
            android:text="Asupan Harian"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_semilarge"
            android:textStyle="bold" />

        <!-- Kalori -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kalori"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/tvKaloriDH"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressKaloriDH"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="0"
            android:max="100"
            android:progressTint="#FF6E40"
            android:backgroundTint="#80FFFFFF"
            android:layout_marginTop="4dp"
            android:indeterminate="false" />

        <!-- Karbo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="0dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Karbohidrat"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/tvKarboDH"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressKarboDH"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="0"
            android:max="100"
            android:progressTint="#FF6E40"
            android:backgroundTint="#80FFFFFF"
            android:layout_marginTop="4dp"
            android:indeterminate="false" />

        <!-- Protein -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:text="Protein"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/tvProteinDH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressProteinDH"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="0"
            android:max="100"
            android:progressTint="#FF6E40"
            android:backgroundTint="#80FFFFFF"
            android:layout_marginTop="4dp"
            android:indeterminate="false" />

        <!-- Lemak -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:layout_weight="1"
                android:text="Lemak"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/tvLemakDH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressLemakDH"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="0"
            android:max="100"
            android:progressTint="#FF6E40"
            android:backgroundTint="#80FFFFFF"
            android:layout_marginTop="4dp"
            android:indeterminate="false" />

        <!-- Asupan Cairan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:layout_weight="1"
                android:text="Asupan Cairan"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/tvAsupanCairanDH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressAsupanCairanDH"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="0"
            android:max="100"
            android:progressTint="#FF6E40"
            android:backgroundTint="#80FFFFFF"
            android:layout_marginTop="4dp"
            android:indeterminate="false" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDetailMakanan"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="85dp"
        android:layout_height="match_parent" />
</LinearLayout>