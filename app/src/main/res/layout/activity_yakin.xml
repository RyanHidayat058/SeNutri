<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".kuisioner.YakinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:minHeight="48dp">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Kembali"
                        android:tint="@color/black"
                        android:padding="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/textJudul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Konfirmasi"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semibold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apakah Anda yakin data Anda sudah benar?"
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_semibold"/>

                <TextView
                    android:id="@+id/namaUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/usiaUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/tanggalLahirUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/genderUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/beratUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/tinggiUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/penyakitUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/targetUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/kuesioner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/kuesioner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/kuesioner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/kuesioner4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/kuesioner5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_semilarge"
                    android:layout_marginBottom="53dp"
                    android:fontFamily="@font/montserrat_regular"/>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnYa"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Ya"
            android:textSize="@dimen/text_medium"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
