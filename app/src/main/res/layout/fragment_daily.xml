<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dailyLayout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvWelcome"
        android:text="-"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNutrisi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/blue_primary"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nutrisi Harian"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Progress bar + kalori -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="3">

                <TextView
                    android:text="Kalori"
                    android:textColor="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvKaloriCount"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/percentageKalori"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressKalori"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="0"
                android:max="100"
                android:progressTint="#FF7B00"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:backgroundTint="#B8B8B8"
                android:indeterminate="false"
                android:progressBackgroundTint="#D9D9D9"
                android:layout_marginBottom="12dp"/>

            <!-- Karbo, Protein, Lemak -->
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:weightSum="3"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginHorizontal="4dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Karbo"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvKarbohidrat"
                        android:text="-"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:text="Protein"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvProtein"
                        android:text="-"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:text="Lemak"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvLemak"
                        android:text="-"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cardNutrisi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:src="@drawable/ic_calendar"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tanggalHariIni"
            android:text="-"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listMakanan"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutTanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:weightSum="4"
        android:gravity="left">

        <!-- Card Sarapan -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:id="@+id/cardSarapan"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue_primary"
            app:cardCornerRadius="12dp"
            android:elevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Sarapan"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/totalSarapan"
                    android:text="Total Makanan: 0\nTotal kalori : 0 Kalori"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Makan Siang -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:id="@+id/cardMakanSiang"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue_primary"
            app:cardCornerRadius="12dp"
            android:elevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Makan Siang"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/totalMakanSiang"
                    android:text="Total Makanan: 0\nTotal kalori : 0 Kalori"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Camilan -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:id="@+id/cardCamilan"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue_primary"
            app:cardCornerRadius="12dp"
            android:elevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Camilan"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/totalCamilan"
                    android:text="Total Makanan: 0\nTotal kalori : 0 Kalori"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Makan Malam -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:id="@+id/cardMakanMalam"
            android:backgroundTint="@color/blue_primary"
            app:cardCornerRadius="12dp"
            android:elevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Makan Malam"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/totalMakanMalam"
                    android:text="Total Makanan: 0\nTotal kalori : 0 Kalori"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

<!-- FAB Menu Items -->
    <LinearLayout
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ITEM: Sarapan -->
        <LinearLayout
            android:id="@+id/itemSarapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textSarapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sarapan"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabSarapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_food"
                app:backgroundTint="@color/blue_primary"
                app:tint="@android:color/white"
                android:contentDescription="Sarapan"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp" />
        </LinearLayout>

        <!-- Ulangi pola ini untuk 3 item lainnya -->

        <LinearLayout
            android:id="@+id/itemMakanSiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textMakanSiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan Siang"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabMakanSiang"
                android:layout_width="wrap_content"
                app:backgroundTint="@color/blue_primary"
                app:tint="@android:color/white"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_food"
                android:contentDescription="Makan Siang" />
        </LinearLayout>

        <!-- Camilan -->
        <LinearLayout
            android:id="@+id/itemCamilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textCamilan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camilan"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCamilan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/blue_primary"
                app:tint="@android:color/white"
                android:src="@drawable/ic_food"
                android:contentDescription="Camilan" />
        </LinearLayout>

        <!-- Makan Malam -->
        <LinearLayout
            android:id="@+id/itemMakanMalam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textMakanMalam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan Malam"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabMakanMalam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/blue_primary"
                app:tint="@android:color/white"
                android:src="@drawable/ic_food"
                android:contentDescription="Makan Malam" />
        </LinearLayout>
    </LinearLayout>

<!-- Main FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="83dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Tambah"
        app:backgroundTint="@color/blue_primary"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>